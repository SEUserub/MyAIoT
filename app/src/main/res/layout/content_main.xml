<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="org.serlohu.amuuii.myaiot.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Primer recuadro -->
        <LinearLayout
            android:padding="@dimen/rellenodi"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">
            <!-- Primera linea -->
            <LinearLayout
                android:padding="@dimen/rellenodi"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Titulo_Nombre_Servidor"
                    android:id="@+id/textView1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:id="@+id/textView2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11111111111"
                    android:id="@+id/textView3" />
            </LinearLayout>
            <!-- Segunda linea -->
            <LinearLayout
                android:padding="@dimen/rellenodi"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Titulo_Nombre_Variable"
                    android:id="@+id/textView4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:id="@+id/textView5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222222222"
                    android:id="@+id/textView6" />
            </LinearLayout>
            <!-- Tercera linea -->
            <LinearLayout
                android:padding="@dimen/rellenodi"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Titulo_Nombre_Dispositivo"
                    android:id="@+id/textView7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:id="@+id/textView8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3333333333"
                    android:id="@+id/textView9" />
            </LinearLayout>

        </LinearLayout>

        <!-- Segundo recuadro -->
        <LinearLayout
            android:padding="@dimen/rellenodi"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:background="@drawable/border">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/Grafica">
            </FrameLayout>
        </LinearLayout>

        <!-- Tercer recuadro -->
        <LinearLayout
            android:padding="@dimen/rellenodi"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_row="2"
            android:layout_column="0">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle">

                <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LED1"
                android:id="@+id/buttonled1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED2"
                    android:id="@+id/buttonled2" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED3"
                    android:id="@+id/buttonled3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED4"
                    android:id="@+id/buttonled4" />
            </LinearLayout>
        </LinearLayout>

        <!-- Cuarto recuadro -->
        <LinearLayout
            android:padding="@dimen/rellenodi"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/border">

            <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ScrollViewEstado"
                android:layout_gravity="center_horizontal" >


                <TextView android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Log\n"  android:id="@+id/TextViewEstado" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
